    "paths": {
        "/weighings": {
            "post": {
                "tags": ["Weighings"],
                "summary": "Create a weighing summary",
                "description": "Create a new weighing summary",
                "security": [
                   { "bearerAuth": [] } 
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "weighings": {
                                        "type": "array",
                                        "properties": {
                                            "code": {
                                                "type": "string"
                                            },
                                            "depositor":{
                                                "type": "string"
                                            },
                                            "lot": {
                                                "type": "string"
                                            },
                                            "product": {
                                                "type": "string"
                                            },
                                            "input": {
                                                "type": "int"
                                            },
                                            "productor_type": {
                                                "type": "string"
                                            },
                                            "output": {
                                                "type": "int"
                                            }
                                        }
                                    }
                                },
                                "example": {
                                    "weighings": [
                                        {
                                            "code": "Weighing code example",
                                            "depositor": "Weighing depositor example",
                                            "lot": "Weighing lot example",
                                            "product": "Weighing product example",
                                            "productor_type": "Weighing productor type example",
                                            "input": 100,
                                            "output": 1
                                        }
                                    ]
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            },
            "get": {
                "tags": ["Weighings"],
                "summary": "List all weighings",
                "description": "List all weighings",
                "security": [
                    { "bearerAuth": [] }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "properties": {
                                        "id": {
                                            "type": "string"
                                        },
                                        "code": {
                                            "type": "string"
                                        },
                                        "depositor":{
                                            "type": "string"
                                        },
                                        "lot": {
                                            "type": "string"
                                        },
                                        "product": {
                                            "type": "string"
                                        },
                                        "input": {
                                            "type": "int"
                                        },
                                        "output": {
                                            "type": "int"
                                        },
                                        "sync": {
                                            "type": "string"
                                        }
                                    },
                                    "example": 
                                        [
                                            {
                                                "id": "5b0b1bc0-dc4b-4f99-8ff5-de23bd427d39",
                                                "code": "Weighing code example",
                                                "depositor": "Weighing depositor example",
                                                "lot": "Weighing lot example",
                                                "product": "Weighing product example",
                                                "input": 100,
                                                "output": 1,
                                                "sync": "4e284973-de62-4e5a-99c9-4692f3b1c665"
                                            }
                                        ]
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    } 
                }
            }
        },
        "/users": {
            "post": {
                "tags": ["Users"],
                "summary": "Create a new user",
                "description": "Create a new user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "username": "username",
                                    "password": "password"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "User already exists"
                    }
                }
            }
        },
        "/users/session": {
            "post": {
                "tags": ["Users"],
                "summary": "Create a new user session",
                "description": "Create a new suer sesion",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "username": "username",
                                    "password": "password"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        },
                                        "user": {
                                            "type": "object",
                                            "properties": {
                                                "username": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "User already exists"
                    }
                }
            }
        }
    }
}