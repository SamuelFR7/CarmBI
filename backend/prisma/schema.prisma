generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Weighing {
    id              String      @id @default(uuid())
    code            String
    depositor       String
    lot             String
    product         String
    producer_type   String
    input           Int
    output          Int
    sync            String
    updated_at      DateTime

    @@map("weighings")
}

model User {
    id              String      @id @default(uuid())
    username        String      @unique
    password        String
    is_admin        Boolean     @default(false)
    created_at      DateTime    @default(now())

    @@map("users")
}